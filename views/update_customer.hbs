{{> header}}

<div class="container mt-5 col-md-6 col-xs-6 col-lg-6 col-sm-6 offset-md-3">
    <p class="alert alert-info font-weight-bold">Update Customer Information</p>
    <form action="/update_customer" method="post" autocomplete="off">
        <div class="form-group">
            <label for="email">Email Id</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="email"
                placeholder="Enter email Id (e.g abc@mail.com)">
            <small id="email" class="form-text text-muted">Customer email id to whom you want to update</small>
        </div>
        <button type="submit" class="btn btn-success btn-block">Get Data</button>
    </form>
    {{#if returnerror}}
    <p class="alert alert-danger mt-2">No data found for the requested mail id</p>
    {{/if}}
    {{#each results}}
    <form action="/add_customer" method="post" autocomplete="off" class="mt-3">
        <div class="form-group">
          <label for="fname">First Name</label>
          <input type="text" class="form-control" name="fname" id="fname" aria-describedby="helpId" placeholder="Enter your First Name" value={{firstname}}>
        </div>
        <div class="form-group">
          <label for="lname">Last Name</label>
          <input type="text" class="form-control" name="lname" id="lname" aria-describedby="" placeholder="Enterr Last Name" value={{lname}}>
        </div>
        <div class="form-group">
          <label for="email">Email-Id</label>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="" placeholder="Enter your email id" value={{email}}>
        </div>
        <div class="form-group">
          <label for="date">Date-Of-Birth</label>
          <input type="text" class="form-control" name="date" id="date" aria-describedby="" placeholder="Enter your Data of Birth" value={{dob}}>
        </div>
        <div class="form-group">
          <label for="number">Mobile Number</label>
          <input type="number"
            class="form-control" name="number" id="number" aria-describedby="" placeholder="Enter your mobile Number" value={{mobile_number}}>
        </div>
        <button type="submit" class="btn btn-secondary btn-block" name="submit">Update Customer Data</button>
    </form>
    {{/each}}
</div>