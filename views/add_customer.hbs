{{> header}}

<div class="container mt-3">
    {{#if successInfo}}
        <p class="alert alert-success offset-md-3 col-md-6">Data Has Been Inserted Successfully</p>
        {{else}}
        <p class="alert alert-warning text-center font-weight-bold text-danger offset-md-3 col-md-6">FILL ALL INFORMATION</p>
    {{/if}}
    <form action="/add_customer" method="post" class="col-sm-6 col-md-6 col-lg-6 col-xs-6 offset-md-3" autocomplete="off">
        <div class="form-group">
          <label for="fname">First Name</label>
          <input type="text" class="form-control" name="fname" id="fname" aria-describedby="helpId" placeholder="Enter your First Name">
        </div>
        <div class="form-group">
          <label for="lname">Last Name</label>
          <input type="text" class="form-control" name="lname" id="lname" aria-describedby="" placeholder="Enterr Last Name">
        </div>
        <div class="form-group">
          <label for="email">Email-Id</label>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="" placeholder="Enter your email id">
        </div>
        <div class="form-group">
          <label for="date">Date-Of-Birth</label>
          <input type="date" class="form-control" name="date" id="date" aria-describedby="" placeholder="Enter your Data of Birth">
        </div>
        <div class="form-group">
          <label for="number">Mobile Number</label>
          <input type="number"
            class="form-control" name="number" id="number" aria-describedby="" placeholder="Enter your mobile Number">
        </div>
        <button type="submit" class="btn btn-secondary btn-block" name="submit">Add Customer Data</button>
    </form>
</div>